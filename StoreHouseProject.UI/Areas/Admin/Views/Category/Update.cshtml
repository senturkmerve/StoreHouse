
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model StoreHouseProject.UI.Areas.Admin.Models.DTO.CategoryDTO
<section class="content-header">
    <h1>
        Category Transactions
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminIndex"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Admin/Category/Add">Add Category</a></li>
        <li><a href="/Admin/Category/List">List of Category</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            @*@Html.Partial("FormMessages")*@
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Category</h3>
                </div>
                <form action="/Admin/Category/Update" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Name</label>
                            <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" name="Description" rows="3" placeholder="Description">@Model.Description</textarea>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

